---
import Layout from '../layouts/Layout.astro';
// return Astro.redirect("/07");
---
<Layout pageTitle="Redirecting...">
  <meta http-equiv="refresh" content="1; url=/07" />
  <div class="container">
    <div class="box-container">
      <div class="box"></div>
      <div class="box"></div>
      <div class="box"></div>
      <div class="box"></div>
    </div>
  </div>
</Layout>

<style>
.container {
  max-width: 777px;
  width: 100%;
  height: 100dvh;
  margin: 0 auto;
  overflow: hidden;
  background-color: #333;
  display: flex;
  justify-content: center;
  align-items: center;
}

.box-container {
  display: grid;
  gap: 8px;
  grid-template-columns: 40px 40px;
  grid-template-rows: 40px 40px;
}

.box {
  background-color: #fff;
  animation: rotate-please 2s linear infinite alternate;
  border-radius: 50%;
  &:nth-child(1) {
    animation-delay: -1s;
  }
  &:nth-child(2) {
    animation-delay: -0.75s;
  }
  &:nth-child(3) {
    animation-delay: -0.5s;
  }
  &:nth-child(4) {
    animation-delay: -0.25s;
  }
}

@keyframes rotate-please {
  0% {
    opacity: 1;
    transform: rotateX(0deg) scale(1);
  }
  25% {
    opacity: 1;
    transform: rotateX(0deg) scale(1);
  }
  100% {
    opacity: 0;
    transform: rotateX(720deg) scale(0);
  }
}

@keyframes background {
  to {
    background-color: #000;
  }
}
</style>